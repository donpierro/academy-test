<div class="container">
  <h3>City</h3>
  <div class="row">
    <div class="col-md-12">
      <strong>Name: </strong><%= @city.name %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <strong>Short name: </strong><%= @city.short_name %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-12">
      <%= link_to 'Edit', edit_city_path(@city), class: "btn btn-default btn-xs"%>
      <%= link_to 'Back to list', cities_path, class: "btn btn-default btn-xs" %>
    </div>
  </div>
</div>
